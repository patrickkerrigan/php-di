{
    "name": "pkerrigan/di",
    "description": "A lightweight dependency injector",
    "keywords": ["container", "di", "dependency injection", "injector", "psr11"],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Patrick Kerrigan",
            "homepage": "https://patrickkerrigan.uk/"
        }
    ],

    "provide": {
        "psr/container-implementation": "1.0.0"
    },

    "require": {
        "php": ">=8.4",
        "psr/container": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^11"
    },

    "autoload": {
        "psr-4": {"Pkerrigan\\Di\\": "src/"}
    },

    "autoload-dev": {
        "psr-4": {"Pkerrigan\\Di\\": "tests/"}
    }
}
